# ===============================================================
# DriveVectorAI Production Environment Configuration
# ===============================================================
# Copy this file to .env and update with your actual values
# ===============================================================

# Database Configuration (Required)
DB_HOST=db
DB_PORT=5432
DB_NAME=drivevectorai
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Redis Configuration
REDIS_BROKER_URL=redis://redis:6379/0

# JWT Configuration (Required - Change in Production!)
JWT_SECRET_KEY=CHANGE_THIS_TO_A_VERY_SECURE_SECRET_KEY_AT_LEAST_32_CHARACTERS
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google Cloud Configuration
GOOGLE_PROJECT_ID=your-google-project-id
SECRET_MANAGER_DB_SECRET_ID=drivevectorai-db-credentials
DRIVE_FOLDER_ID=your-google-drive-folder-id
GCS_BUCKET_NAME=your-gcs-bucket-name
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials.json

# OpenAI Configuration (Required for AI features)
OPENAI_API_KEY=your-openai-api-key

# Service Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000
DB_PORT=5432

# Celery Configuration
CELERY_CONCURRENCY=2

# Frontend Configuration
REACT_APP_API_URL=/api

# Service URLs (for Coolify deployment)
SERVICE_URL_FRONTEND=http://gdrivevector.mbinx.com
SERVICE_FQDN_FRONTEND=gdrivevector.mbinx.com

# Coolify Configuration
COOLIFY_URL=
COOLIFY_FQDN=

# Build Information
SOURCE_COMMIT=latest
